<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.quasar_productions.phoenix" >

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme.Blue" >
        <activity
            android:name=".activities.PostActivity"
            android:label="@string/app_name"
            android:theme="@style/TranslucentToolbar">
            <intent-filter>

                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http"
                    android:host="quasar-academy.com"
                    />
                <data android:scheme="http"
                    android:host="quasar-academy.com"
                    />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/DrawerActivity.Blue" >
        </activity>
        <activity
            android:name=".activities.Start"
            android:label="@string/title_activity_start"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar.Blue" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.PreferenceActivity"
            android:label="@string/title_activity_preference"
            android:theme="@style/AppTheme.Blue" >
        </activity>

    </application>

</manifest>
