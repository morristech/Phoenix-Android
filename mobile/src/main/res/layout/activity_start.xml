<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|center_vertical"
    tools:context="com.quasar_productions.phoenix.activities.Start">

    <com.quasar_productions.phoenix_lib.Wave.WaveView
        android:id="@+id/wave_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        wave:above_wave_color="@color/nliveo_blue_colorPrimary"
        wave:blow_wave_color="@color/nliveo_blue_colorPrimaryDark"
        wave:progress="80"
        wave:wave_height="little"
        wave:wave_hz="normal"
        wave:wave_length="middle" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="48dp"
        android:id="@+id/tv_start"
        />
</FrameLayout>